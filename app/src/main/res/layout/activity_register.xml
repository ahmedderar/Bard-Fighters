<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="adirar.hope.RegisterActivity">


    <EditText
                android:id="@+id/input_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="User Name"
                android:inputType="text" />


    <EditText
                android:id="@+id/input_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:inputType="textPassword" />


    <EditText
                android:id="@+id/input_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:inputType="textEmailAddress" />

    <EditText
                android:id="@+id/input_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone"
                android:inputType="phone" />
    <EditText
                android:id="@+id/input_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Address"
                android:inputType="text" />
    <EditText
        android:id="@+id/v_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Volunteer Activity"
        android:inputType="text" />

    <Spinner
        android:id="@+id/division"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/division"
        android:inputType="text" />
    <Spinner
        android:id="@+id/nearest_branch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nearest Branch" />


  <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/sign_up"
      android:id="@+id/reg_signUpBtn"
      android:textAllCaps="false"
      android:textSize="28sp"
      android:layout_margin="30dp"
      android:paddingLeft="80dp"
      android:paddingRight="80dp"
      android:paddingTop="8dp"
      android:paddingBottom="8dp"/>

</LinearLayout>
